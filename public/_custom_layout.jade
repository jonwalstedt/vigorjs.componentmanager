doctype
html
  head
    title Vigorjs ComponentManager
    link(rel="stylesheet" href="/css/main.css")
    block includes

  body
    header.header
      div.header-content
        h1
          a(href='/', class='header__title') Vigorjs ComponentManager

        nav.main-navigation
          ul.main-navigation__list
            li.main-navigation__list-item
              a(href="/docs" class="main-navigation__link #{ current.path[0] == 'docs' ? 'main-navigation__link--active' : '' }") Docs
            li.main-navigation__list-item
              a(href="/examples" class="main-navigation__link #{ current.path[0] == 'examples' ? 'main-navigation__link--active' : '' }") Examples

    main.content-wrapper
      block sidebar

      article.content
        block content
          != partial("../README")

    //- footer.footer
    //-   block footer
    //-     p im a footer

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js")
    script(src="/js/vigor.componentmanager.js")

    block common-example-scripts
    block scripts
