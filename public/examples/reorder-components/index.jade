extends ../index.jade

block sidebar
  div.sidebar-wrapper
    aside.sidebar
      != partial("../../_sidebar-header")
      != partial("../_examples-sidebar-content")

block content
  != partial("./reorder-components")
  != partial("../_components", {code: partial("./components"), conditions: '0', components: '1', instances: '5'})

  div.app-wrapper
    small controls
    div.controls
      button.decrement Decrement instance 1s ordernr
      button.increment Increment instance 1s ordernr
      button.randomize Randomize all

    small .component-area--main
    div.component-area.component-area--main

block scripts
  script(src="./components/ReorderComponent.js")
  script(src="./components.js")
  script(src="./app/app.js")
  script.
    $(document).ready(function () {
      new app.Filter({
        el: '.app-wrapper'
      });
    });

